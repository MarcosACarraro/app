<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXamarim.View.LoginView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15">
                <Image Source="login.png" HorizontalOptions="CenterAndExpand" Aspect="AspectFit" />
                <Label Text="Bem vindo!" HorizontalTextAlignment="Center" TextColor="Black"/>
                <Entry Placeholder="Usuario" Text="{Binding Usuario}" HorizontalOptions="FillAndExpand"/>
                <Entry Placeholder="Senha" IsPassword="true" Text="{Binding Senha}" HorizontalOptions="FillAndExpand"/>
                <Button Text="Logar" HorizontalOptions="FillAndExpand" BackgroundColor="Blue" TextColor="White" Command="{Binding LoginCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>